# SmartAmazon Backend Environment Configuration

# Application
ENVIRONMENT=development
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Database (using SQLite for demo)
DATABASE_URL=sqlite:///./smartamazon.db

# Redis (optional for demo - will gracefully skip if not available)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false

# Security
SECRET_KEY=demo-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# Email (optional for demo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@smartamazon.demo

# Amazon API (not needed for demo with mock data)
AMAZON_API_KEY=
AMAZON_API_SECRET=
AMAZON_ASSOCIATE_TAG=

# Monitoring
PROMETHEUS_ENABLED=true
